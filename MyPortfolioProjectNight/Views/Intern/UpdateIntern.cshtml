@model MyPortfolioProjectNight.Models.Intern
@{
    ViewBag.Title = "UpdateIntern";
    Layout = "~/Views/Admin/Index.cshtml";
}

<h2 class="mb-4">Staj Güncelleme Sayfası</h2>

<form method="post">
    @Html.HiddenFor(x => x.InternID)

    <label>Deneyim Başlığı</label>
    @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
    <br />
    <label>Deneyim Alt Başlığı</label>
    @Html.TextBoxFor(x => x.SubTitle, new { @class = "form-control" })
    <br />
    <label>Deneyim Açıklaması</label>
    @Html.TextAreaFor(x => x.Description, new { @class = "form-control" })
    <br />
    <label>Başlagıç Tarihi</label>
    @Html.TextBoxFor(x => x.StartDate, new { @class = "form-control" })
    <br />
    <label>Bitiş Tarihi</label>
    @Html.TextAreaFor(x => x.EndDate, new { @class = "form-control" })
    <br />
    <button class="btn btn-info">Stajı Gncelle</button>
</form>
